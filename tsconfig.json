{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "types": ["node"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./bin",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "pretty": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "bin"
  ]
}